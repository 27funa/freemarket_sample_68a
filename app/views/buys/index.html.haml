.buy
  %header.header-logo
    = render partial: 'part_template/header'
  .buy-main
    .buy-container
      %h2.buy-container__title 購入内容の確認

      .buy-item
        .buy-item__image
          = image_tag 'sushi_aburi_toro.png', class: 'img'
        .buy-item__details
          .buy-item__details__title
            %p product3
          .buy-item__details__price
            %p &yen;30000 (税込) 送料込み

      .buy-content
        .buy-content__price
          .buy-content__price__amount
            %h2 支払い金額
            %h2 &#165;30000
        .buy-content__payment
          %h2  支払い方法
          - if @userCard.present?
            .container
              .creditcard-info
                = image_tag "creditcards/#{@card_image}", height:'50', alt:'card-logo'
                %p.creditcard-info__number
                  = "**** **** **** " + @card_info.last4 #クレジットカードの下４桁を表示
                %p.creditcard-info__period 
                = @exp_month + " / " + @exp_year
              = button_to "削除する", buys_index_path(@userCard), method: :delete, class:"creditcard-info__delete"
          - else
            .new-card
              = link_to new_buy_credit_path do
                %p
                  %i.fas.fa-cog.fa-spin
                  登録してください
        .buy-content__address
          %h2  配送先
          %a{href:"#"} 
            %p
              %i.fas.fa-cog.fa-spin
              登録してください
        .buy-content__info
          %input.buy-content__info__btn{:type => "submit", :value => "購入する"}

  %footer
    = render partial: 'part_template/footer'