.category-main-header
  = render 'posts/header'

.category__container
  .category__container--top
    %h2 カテゴリー一覧
    - @parents.each_with_index do |parent, i|
      - unless parent.name.include?("カテゴリー一覧")
        = link_to "##{i + 2}", class: "box__parent--link" do
          = parent.name

  - @parents.each_with_index do |parent, i|
    - unless parent.name.include?("カテゴリー一覧")
      .category__container--box
        .category__container--box--title{id: "#{i + 2}"}
          = parent.name
        .category__box--child
          .category__box--child--all
            = link_to "/categories/#{parent.id}/parent", class: "category__link--btn" do
              すべて
          - parent.children.each do |child|
            .child__box
              .child__box--name
                = child.name
              .grandchild__box
                .grandchild__link
                  = link_to "/categories/#{child.id}/child", class: "category__link--btm" do
                    すべて
                -child.children.each do |grandchild|
                  .grandchild__link
                    - unless grandchild.name.include?("すべて")
                      = link_to "/categories/#{grandchild.id}/grandchild", class: "category__link--btm" do
                        = grandchild.name