=render "posts/header"
.main-content
  -# 左メニュ
  = render "accounts/menu"
  -# 右側
  .user-info-right-content
    .user-info-top
      .user-info-top__title
        本人情報の登録
      .user-info-top__explanation
        お客様の本人情報をご登録ください。

    -# 名前登録-----------------------------------------------------------------
    .user-info-main
      .user-info-main__label-content
        .label-name
          お名前
        .required-mark
          必須
      .user-info-main__input-box
        -# あとでモデルをいれること
        = form_with do |f|
          .user-info-main__iput-box-1
          = f.text_field :family_name, {class:"box-style",placeholder:"例）山田"}
          .user-info-main__iput-box-2
          = f.text_field :first_name, {class:"box-style",placeholder:"例）彩"}

    -# 名前登録（カナ）-----------------------------------------------------------------
    .user-info-main
      .user-info-main__label-content
        .label-name
          お名前（カナ）
        .required-mark
          必須
      .user-info-main__input-box
        -# あとでモデルをいれること
        = form_with do |f|
          .user-info-main__iput-box-1
          = f.text_field :family_name_kana, {class:"box-style",placeholder:"例）ヤマダ"}
          .user-info-main__iput-box-2
          = f.text_field :first_name_kana, {class:"box-style",placeholder:"例）アヤ"}

    -# 生年月日-----------------------------------------------------------------
    .user-info-main
      .user-info-main__label-content
        .label-name
          生年月日
        .required-mark
          必須
      .user-info-main__input-box
        -# あとでモデルをいれること
        = form_with do |f|
          .birth-box
          != sprintf(f.date_select(:birth, with_css_classes:'XXXXX', prompt:"--",use_month_numbers:true, start_year:Time.now.year, end_year:1900, date_separator:'%s'),'年','月')+'日'

    -# 郵便番号-----------------------------------------------------------------
    .user-info-main
      .user-info-main__label-content
        .label-name
          郵便番号
        .required-mark
          必須
        .postal-code-remark
          ※ハイフンは記入しないでください
      .user-info-main__input-box
        -# あとでモデルをいれること
        = form_with do |f|
          .user-info-main__iput-box-1
          = f.text_field :postal_code, {class:"box-style",placeholder:"例）123456"}

    -# 都道府県-----------------------------------------------------------------
    .user-info-main
      .user-info-main__label-content
        .label-name
          都道府県
        .required-mark
          必須
      .user-info-main__input-box
        -# あとでモデルをいれること
        = form_with do |f|
          .user-info-main__iput-box-1
          = f.select :state,["---","北海道","青森県","岩手県","宮城県","秋田県","山形県","福島県","茨城県","栃木県","群馬県","埼玉県","千葉県","東京都","神奈川県","新潟県","富山県","石川県","福井県","山梨県","長野県","岐阜県","静岡県","愛知県","三重県","滋賀県","京都府","大阪府","兵庫県","奈良県","和歌山県","鳥取県","島根県","岡山県","広島県","山口県","徳島県","香川県","愛媛県","高知県","福岡県","佐賀県","長崎県","熊本県","大分県","宮崎県","鹿児島県","沖縄県"],{},class:"box-style"
  
    -# 市区町村名-----------------------------------------------------------------
    .user-info-main
      .user-info-main__label-content
        .label-name
          市区町村
        .required-mark
          必須
      .user-info-main__input-box
        -# あとでモデルをいれること
        = form_with do |f|
          .user-info-main__iput-box-1
          = f.text_field :city, {class:"box-style",placeholder:"例）横浜市緑区"}

    -# 番地-----------------------------------------------------------------
    .user-info-main
      .user-info-main__label-content
        .label-name
          番地
        .required-mark
          必須
      .user-info-main__input-box
        -# あとでモデルをいれること
        = form_with do |f|
          .user-info-main__iput-box-1
          = f.text_field :address_line_1, {class:"box-style",placeholder:"例）青山１−１"}

    -# 建物名-----------------------------------------------------------------
    .user-info-main
      .user-info-main__label-content
        .label-name
          建物名
        .any-mark
          任意
      .user-info-main__input-box
        -# あとでモデルをいれること
        = form_with do |f|
          .user-info-main__iput-box-1
          = f.text_field :address_line_2, {class:"box-style",placeholder:"例）柳ビル103"}
          = f.submit "登録する", {class: "user-info-main-send-button"}


-# フッター -----------------------------------------------------------------
=render "posts/footer"          
