=render "posts/header"
.mypage
  -# 左メニュ
  = render "profiles/menu"
  -# 右側
  .user__info
    .user__info__header
      .user__info__header__title
        発送元・お届け先住所変更

    -# 名前登録-----------------------------------------------------------------
    .user__info__main
      .user__info__main__label
        .user__info__main__label__name
          お名前
        .required-mark
          必須
      .user__info__main__form
        -# あとでモデルをいれること
        = form_with do |f|
          = f.text_field :family_name, {class:"box-style",placeholder:"例）山田"}
          = f.text_field :first_name, {class:"box-style",placeholder:"例）彩"}

    -# 名前登録（カナ）-----------------------------------------------------------------
    .user__info__main
      .user__info__main__label
        .user__info__main__label__name
          お名前（カナ）
        .required-mark
          必須
      .user__info__main__form
        -# あとでモデルをいれること
        = form_with do |f|
          = f.text_field :family_name, {class:"box-style",placeholder:"例）山田"}
          = f.text_field :first_name, {class:"box-style",placeholder:"例）彩"}

    -# 郵便番号-----------------------------------------------------------------
    .user__info__main
      .user__info__main__label
        .user__info__main__label__name
          郵便番号
        .required-mark
          必須
        .postal-code-remark
          ※ハイフンは記入しないでください
      .user__info__main__form
        -# あとでモデルをいれること
        = form_with do |f|
          = f.text_field :family_name, {class:"box-style",placeholder:"例）山田"}

    -# 都道府県-----------------------------------------------------------------
    .user__info__main
      .user__info__main__label
        .user__info__main__label__name
          都道府県
        .required-mark
          必須
      .user__info__main__form
        -# あとでモデルをいれること
        = form_with do |f|
          = f.select :state,["---","北海道","青森県","岩手県","宮城県","秋田県","山形県","福島県","茨城県","栃木県","群馬県","埼玉県","千葉県","東京都","神奈川県","新潟県","富山県","石川県","福井県","山梨県","長野県","岐阜県","静岡県","愛知県","三重県","滋賀県","京都府","大阪府","兵庫県","奈良県","和歌山県","鳥取県","島根県","岡山県","広島県","山口県","徳島県","香川県","愛媛県","高知県","福岡県","佐賀県","長崎県","熊本県","大分県","宮崎県","鹿児島県","沖縄県"],{},class:"state-box-style"
          =icon("fa","angle-down",class:"angle-down-icon")  
    -# 市区町村名-----------------------------------------------------------------
    .user__info__main
      .user__info__main__label
        .user__info__main__label__name
          市区町村
        .required-mark
          必須
      .user__info__main__form
        -# あとでモデルをいれること
        = form_with do |f|
          = f.text_field :city, {class:"box-style",placeholder:"例）横浜市緑区"}
    -# 番地-----------------------------------------------------------------
    .user__info__main
      .user__info__main__label
        .user__info__main__label__name
          番地
        .required-mark
          必須
      .user__info__main__form
        -# あとでモデルをいれること
        = form_with do |f|
          = f.text_field :address_line_1, {class:"box-style",placeholder:"例）青山１−１"}

    -# 建物名-----------------------------------------------------------------
    .user__info__main
      .user__info__main__label
        .user__info__main__label__name
          建物名
        .any-mark
          任意
      .user__info__main__form
        -# あとでモデルをいれること
        = form_with do |f|
          = f.text_field :address_line_2, {class:"box-style",placeholder:"例）柳ビル103"}
    -# 電話番号-----------------------------------------------------------------
    .user__info__main
      .user__info__main__label
        .user__info__main__label__name
          電話番号
        .any-mark
          任意
      .user__info__main__form
        -# あとでモデルをいれること
        = form_with do |f|
          = f.text_field :tel, {class:"box-style",placeholder:"例）090123456"}
          = f.submit "登録する", {class: "user__info__main__form__button"}

-# フッター -----------------------------------------------------------------
=render "posts/app-banner"
=render "posts/footer"          
