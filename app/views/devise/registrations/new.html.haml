-# 新規会員登録
#account-page.account-page
  .account-page__header
    %p
      = link_to root_path do
        = image_tag 'logo.png', class: ''

  .account-page__body
    .account-page__body__new
      %h2 新規会員登録
      = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        = render "devise/shared/error_messages", resource: resource
        .field
        .field-label 
        = f.label :ニックネーム
        .field-label__block 必須
        .field-input
          = f.text_field :nickname, autofocus: true, placeholder: '例 ）フリマ太朗'
          %br/
        .field
          = f.label :メールアドレス
          .field-label__block 必須
          %br/
          = f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'PC・携帯どちらでも可'
        .field
          = f.label :パスワード
          .field-label__block 必須
          - if @minimum_password_length
            %br/
            %em
              (#{@minimum_password_length} 文字以上の半角英数字)
          %br/
          = f.password_field :password, autocomplete: "new-password", placeholder: '7文字以上の半角英数字'
        .field
          = f.label :"パスワード(確認用)"
          .field-label__block 必須
          %br/
          = f.password_field :password_confirmation, autocomplete: "new-password", placeholder: 'もう一度入力してください'
        .actions
          = f.submit "Sign up", class: 'submit-btn'
    = render "devise/shared/links"
  =render "posts/footer"