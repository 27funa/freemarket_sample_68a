- @posts.each do |post|
  %a{href:"/posts/#{post.id}"}
    .post-item-box
      %figure.post-item-box__image
        = image_tag post.images.first.image.to_s, alt: 'no image', class: 'img'
        %figcaption.post-item-box__image__price
          &yen;
          = post.price
      .post-item-box__name
        = post.item_name